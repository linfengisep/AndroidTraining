<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="isep.docandroidtraing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="isep.docandroidtraining.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="isep.docandroidtraining.MessageActivity"
                  android:parentActivityName="isep.docandroidtraining.MainActivity">
                <meta-data
                  android:name="android.support.PARENT_ACTIVITY"
                    android:value="isep.docandroidtraining.MainActivity"/>
        </activity>
        <activity android:name="isep.docandroidtraining.MainFragment"/>
    </application>

</manifest>