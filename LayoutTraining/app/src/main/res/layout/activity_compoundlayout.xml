<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidespinner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:paddingBottom="10dp">
    <isep.layouttraining.CompoundLayoutView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideSpinner_company"
        android:layout_centerHorizontal="true"/>

    <isep.layouttraining.CompoundLayoutView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideSpinner_vegetable"

        android:gravity="center"
        android:layout_below="@id/sideSpinner_company"
        android:layout_centerHorizontal="true"
        sidespinner:values="@array/vegetable_array"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/missile_button"
        android:src="@drawable/missile"
        android:layout_gravity="center"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/sideSpinner_vegetable"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jin"
        android:scaleType="centerInside"
        android:src="@drawable/jinsanpang"
        android:layout_below="@id/missile_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/round_corner"
        android:text="@string/round_btn"
        android:background="@color/cardbackground"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />
    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="ON"
        android:thumb="@drawable/switch_thumb_test"
        android:track="@drawable/switch_track_test"
        android:textOff="OFF"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>